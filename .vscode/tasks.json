{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "showErrors",
      "command": "tsc",
      "type": "shell",
      "args": ["-w", "-p", ".", "--noEmit"],
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
      },
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    }
  ]
}
